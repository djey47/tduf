<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" prefHeight="720.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.tduf.gui.installer.controllers.SlotsBrowserStageController">
   <children>
      <VBox id="mainVbox" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ToolBar prefHeight="40.0" styleClass="navigationToolbar" VBox.vgrow="NEVER">
               <items>
                  <Label fx:id="instructionsLabel" alignment="TOP_CENTER" layoutX="10.0" layoutY="16.0" text="Select slot to install vehicle on it:" />
                  <TextField fx:id="slotRefTextField" prefWidth="100.0" />
                  <Button mnemonicParsing="false" onAction="#handleOkButtonAction" text="OK" />
                  <Hyperlink onAction="#handleCreateNewSlotHyperlinkAction" text="or create random slot (experimental!)" />
               </items>
            </ToolBar>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
               <items>
                  <Label alignment="TOP_CENTER" text="Filter by vehicle kind:" />
                  <ChoiceBox fx:id="vehicleKindFilterChoiceBox" prefWidth="150.0" />
                  <Label alignment="TOP_CENTER" layoutX="10.0" layoutY="16.0" text="and slot kind:" />
                  <ChoiceBox fx:id="slotKindFilterChoiceBox" layoutX="154.0" layoutY="11.0" prefWidth="150.0" />
               </items>
            </ToolBar>
            <AnchorPane VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="slotsTableView" editable="true" onMouseClicked="#handleSlotsTableMouseClick" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="installedSlotTableColumn" prefWidth="89.0" text="Installed?" />
                      <TableColumn editable="false" prefWidth="100.0" text="REF" />
                      <TableColumn editable="false" prefWidth="510.0" text="Vehicle name" />
                        <TableColumn editable="false" prefWidth="60.0" text="Car ID" />
                    </columns>
                  </TableView>
               </children>
            </AnchorPane>
            <ToolBar prefHeight="40.0" prefWidth="200.0" styleClass="navigationToolbar">
               <items>
                  <Button mnemonicParsing="false" onAction="#handleSearchSlotButtonAction" prefWidth="80.0" text="REF...">
                     <tooltip><Tooltip text="Searches entry with REF." /></tooltip>
                  </Button>
                  <Separator orientation="VERTICAL" />
               </items>
            </ToolBar>
         </children></VBox>
   </children>
</AnchorPane>
