<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="720.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.tduf.gui.installer.controllers.SlotsBrowserStageController">
   <children>
      <VBox id="mainVbox" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ToolBar prefHeight="40.0" styleClass="navigationToolbar" VBox.vgrow="NEVER">
               <items>
                  <Label fx:id="instructionsLabel" alignment="TOP_CENTER" layoutX="10.0" layoutY="16.0" text="Select slot to install vehicle on it:" />
                  <TextField fx:id="slotRefTextField" prefWidth="100.0" />
                  <Button mnemonicParsing="false" onAction="#handleOkButtonAction" text="OK" />
                  <Hyperlink onAction="#handleCreateNewSlotHyperlinkAction" text="or create random slot (experimental!)" />
               </items>
            </ToolBar>
            <AnchorPane VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="slotsTableView" onMouseClicked="#handleSlotsTableMouseClick" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                      <TableColumn editable="false" prefWidth="96.0" text="REF" />
                      <TableColumn editable="false" prefWidth="510.0" text="Vehicle name" />
                        <TableColumn editable="false" prefWidth="60.0" text="Car ID" />
                    </columns>
                  </TableView>
               </children>
            </AnchorPane>
            <ToolBar prefHeight="40.0" prefWidth="200.0" styleClass="navigationToolbar">
               <items>
                  <Button mnemonicParsing="false" onAction="#handleSearchSlotButtonAction" prefWidth="80.0" text="REF...">
                     <tooltip><Tooltip text="Searches entry with REF." /></tooltip>
                  </Button>
                  <Separator orientation="VERTICAL" />
               </items>
            </ToolBar>
         </children></VBox>
   </children>
</AnchorPane>
